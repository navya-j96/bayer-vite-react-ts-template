# Use official Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of your app
COPY . .

# Vite dev server runs on port 5170
EXPOSE 5170

# Start Vite dev server with hot reload
CMD ["npm", "run", "dev", "--", "--host"]